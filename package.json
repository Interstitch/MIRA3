{
  "name": "claude-mira3",
  "version": "0.2.27",
  "description": "MCP server for Claude Code conversation history with semantic search via ChromaDB",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "claude-mira3": "dist/cli.js"
  },
  "files": [
    "dist/",
    "python/",
    "docs/",
    "server/"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "postinstall": "node dist/cli.js --setup 2>/dev/null || true"
  },
  "keywords": [
    "mcp",
    "claude",
    "claude-code",
    "conversation-history",
    "chromadb",
    "sentence-transformers",
    "semantic-search"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.15",
    "eslint": "^9.17.0",
    "@eslint/js": "^9.17.0",
    "typescript-eslint": "^8.18.2"
  }
}
